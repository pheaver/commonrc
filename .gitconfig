[column]
	branch = auto
[merge]
	defaultToUpstream = true
[svn]
	rmdir = true
[github]
	user = *
	token = *

[core]
	safecrlf = true
	autocrlf = false
	eol = lf
	excludesfile = ~/commonrc/gitignore

